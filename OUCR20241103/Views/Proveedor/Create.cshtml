                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" required class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dui" class="control-label"></label>
                <input asp-for="Dui"  required class="form-control" />
                <span asp-validation-for="Dui" class="text-danger"></span>
            </div>
            <hr>
  <div class="row row-cols-md-12">
        @await Html.PartialAsync("_Detdirecciones", Model.Direccione)
    </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        
    
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Regresar</a>
</div>

